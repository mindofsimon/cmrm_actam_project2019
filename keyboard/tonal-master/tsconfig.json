{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["packages/**/*.ts", "../../packages/**/*"],
  "exclude": ["node_modules", "packages/**/*.test.ts", "**/dist/**/*"]
}
